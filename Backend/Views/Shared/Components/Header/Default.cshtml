                            <p><a asp-controller="Account" asp-action="Register">Register</a></p>
                            <p><a asp-controller="Account" asp-action="Login">Login</a></p>
                        </div>
                    </div>


                </div>
            }
            else
            {

                <p>
                    <span>
                        <script src="https://cdn.lordicon.com/bhenfmcm.js"></script>
                        <lord-icon src="https://cdn.lordicon.com/dxjqoygy.json"
                                   trigger="hover"
                                   colors="primary:#121331,secondary:#08a88a"
                                   style="width:40px;height:40px;padding-top:10px">
                        </lord-icon> @User.Identity.Name
                    </span><a asp-controller="Account" asp-action="Logout">Logout</a>
                </p>
            }
            <a asp-controller="Car" asp-action="AddCar" class="elan_">Add Car</a>
