<div class="container" id="Main_page">
    <div class="overlay">
        <i class="fa-solid fa-xmark"></i>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Car" asp-action="Index">Cars</a>
        <a asp-controller="About" asp-action="Index">About Us</a>
