                </div>

            </div>
        </div>

        <div class="wedding_Cars" id="Wedding_car">
            <div class="mashin_text">
                <h1>@Model.Cars.FirstOrDefault(m => m.Category.Name == "Wedding Car").Category.Name</h1>
                <a asp-controller="Car" asp-action="GetAll" asp-route-id="@Model.Cars.FirstOrDefault(m => m.Category.Name == "Wedding Car").CategoryId">Get All</a>

          
            </div>

            <div class="mashin_img">
                @foreach (var weddingCar in Model.Cars)
                {
                    if (weddingCar.Category.Name == "Wedding Car")
                    {
                        <div class="jeep mashin_melumat">
                            <div class="img_">
                                <a asp-controller="Car" asp-action="Detail" asp-route-id="@weddingCar.Id">
                                    <img src="~/assets/image/@weddingCar.CarImages.FirstOrDefault(m => m.IsMain).Name" alt="">
                                </a>
                            </div>
                            <p>@weddingCar.Brand.Name @weddingCar.Brand.Models.FirstOrDefault().Name</p>
                            <p><i class="fa-solid fa-manat-sign"></i> @weddingCar.Price.ToString("N2")<span>/Daily</span></p>
                            <div class="border"></div>
                            <div class="icone_text">
                                @if (weddingCar.GearBox.Name == "Automatic")
                                {
                                    <p>A</p>
                                    <p>Automatic</p>
                                }
                                else if (weddingCar.GearBox.Name == "Mechanic")
                                {
                                    <p>M</p>
                                    <p>Mechanic</p>
                                }
                                <img src="~/assets/image/dizel.svg" alt="">
                                <p>@weddingCar.FuelType.Name</p>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

