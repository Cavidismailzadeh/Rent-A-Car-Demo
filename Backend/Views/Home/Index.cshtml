    <section id="rentacar_middle">
        <!-- Rent A Car -->
        <div class="r_entAca_r">
            <div class="rent_text">
                <h1>Rent A Car</h1>

            </div>

            <div class="rent_img">
                <div class="khatai img_rent">
                    <img src="~/assets/image/khatai.svg" alt="">
                    <p>Khatai</p>
                    <p>Rent A Car</p>
